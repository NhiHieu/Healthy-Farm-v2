<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
  <link rel='stylesheet' href='/stylesheets/admin/style.css' />
</head>
<body class="grey lighten-3">

   <!--Main Navigation-->
   <header>

      <!-- Navbar -->
      <nav class="navbar fixed-top navbar-expand-lg navbar-light white scrolling-navbar">
        <div class="container-fluid">
  
          <!-- Collapse -->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
  
          <!-- Links -->
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
  
            <!-- Left -->
            <!-- Left -->
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link waves-effect" href="/">Home
                  <span class="sr-only">(current)</span>
                </a>
              </li>
            </ul>
    
             <!-- Right -->
             <ul class="navbar-nav nav-flex-icons">
              <li class="nav-item dropdown">
                <a class="my-nav-link nav-link dropdown-toggle waves-effect waves-light" id="navbarDropdownMenuLink-4" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                  <i class="fa fa-user"></i> Profile </a>
                <div class="dropdown-menu dropdown-menu-right dropdown-info" aria-labelledby="navbarDropdownMenuLink-4">
                  <a class="dropdown-item waves-effect waves-light" href="/user/profile">My account</a>
                  <a class="dropdown-item waves-effect waves-light" href="/user/log-out">Log out</a>
                </div>
              </li>
            </ul>
  
          </div>
  
        </div>
      </nav>
      <!-- Navbar -->
  
      <!-- Sidebar -->
      <div class="sidebar-fixed position-fixed">
        <div style='margin-top: 100px'></div>
        <div class="list-group list-group-flush">
            <a href="/admin" class="list-group-item list-group-item-action waves-effect">
              <i class="fa fa-address-card mr-3"></i>Dashboard</a>
            <a href="/admin/profile" class="list-group-item list-group-item-action waves-effect">
              <i class="fa fa-user mr-3"></i>Profile</a>
            <a href="/admin/users" class="list-group-item list-group-item-action waves-effect">
              <i class="fa fa-table mr-3"></i>Users</a>
            <a href="/admin/products" class="list-group-item list-group-item-action  waves-effect">
              <i class="fa fa-map mr-3"></i>Products</a>
            <a href="/admin/orders" class="list-group-item list-group-item-action waves-effect active">
              <i class="fa fa-credit-card mr-3"></i>Orders</a>
        </div>
      </div>
      <!-- Sidebar -->
  
    </header>
    <!--Main Navigation-->
  <!--Main layout-->
  <main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">
      <!-- Heading -->
      <div class="card mb-4 wow fadeIn px-3">

        <!--Card content-->
        <div class="card-body d-sm-flex justify-content-between">

          <h3 class="mb-2 mb-sm-0 pt-1 font-weight-bold text-default">
            Orders
          </h3>

        </div>

        <table id="dt-products" class="table table-striped table-bordered table-sm" cellspacing="0">
          <thead>
            <tr>
              <th class="th-sm">order date
        
              </th>
              <th class="th-sm">total quantity
                
              </th>
              <th class="th-sm">total price
                
              </th>
              <th class="th-sm">email
                
              </th>
              <th class="th-sm">Action
                
                </th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order=> {%>
              <tr>
                <td><%=order.orderDate.toString().slice(4, 16)%></td>
                <td><%=order.cart.totalQuantity%></td>
                <td><%=order.cart.totalPrice%></td>
                <td><%=order.user.email%></td>
                <td>
                  <a href='' class='btn btn-warning btn-sm px-3'><i class='fa fa-edit'></i></a> 
                  <a href='' class='btn btn-danger btn-sm px-3'><i class='fa fa-trash'></i></a> 
                </td>
              </tr>
            <%})%>
          </tbody>
        </table>
     
      
      </div>
      <!-- Heading -->
  </div>

  </main>


<% include ../partials/scripts %>
</body>
</html>