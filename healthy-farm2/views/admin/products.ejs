      <!-- Sidebar -->
  
    </header>
    <!--Main Navigation-->
  <!--Main layout-->
  <main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">
      <!-- Heading -->
      <div class="card mb-4 wow fadeIn px-3">

        <!--Card content-->
        <div class="card-body d-sm-flex justify-content-between">

          <h3 class="mb-2 mb-sm-0 pt-1 font-weight-bold text-default">
            Products
          </h3>

          <a href="" class='btn btn-success'>New product<i class="fa fa-plus-square pl-2"></i></a>

        </div>

        <table id="dt-products" class="table table-striped table-bordered table-sm" cellspacing="0">
          <thead>
            <tr>
              <th class="th-sm">Name
        
              </th>
              <th class="th-sm">Category
        
              </th>
              <th class="th-sm">Price
        
              </th>
              <th class="th-sm">Unit
        
              </th>
              <th class="th-sm">Action
                
              </th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product=> {%>
              <tr>
                <td><%=product.name%></td>
                <td><%=product.category.name%></td>
                <td><%=product.price%></td>
                <td><%=product.unit%></td>
                <td>
                  <a href='' class='btn btn-warning btn-sm px-3'><i class='fa fa-edit'></i></a> 
                  <a href='' class='btn btn-danger btn-sm px-3'><i class='fa fa-trash'></i></a> 
                </td>
              </tr>
            <%})%>
          </tbody>
        </table>

        <select>
          <% categories.forEach(category=> { %>
            <option name='<%=category.name%>' value='<%=category.id%>'><%=category.name%></option>
          <%})%>
        </select>
      </div>
      <!-- Heading -->
  </div>
  </main>
<% include ../partials/scripts %>
</body>
