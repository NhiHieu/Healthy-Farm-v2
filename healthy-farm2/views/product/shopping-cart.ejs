<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>
<body>

<header>
  <% include ../partials/header %>
</header>
<main class="main">
  <!--add your code here-->
   <!--Modal: modalConfirmDelete-->
   <div class="modal fade" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
   aria-hidden="true">
   <div class="modal-dialog modal-sm modal-notify modal-danger" role="document">
     <!--Content-->
     <div class="modal-content text-center">
       <!--Header-->
       <div class="modal-header d-flex justify-content-center">
         <p class="heading">Confirm delete</p>
       </div>
 
       <!--Body-->
       <div class="modal-body">
 
         <i class="fa fa-times fa-4x animated rotateIn"></i>
         <p><strong>Are you sure you want to delete this product?</strong></p>
 
       </div>
 
       <!--Footer-->
       <div class="modal-footer flex-center">
         <a href="" class="btn  btn-outline-danger confirm-remove-cart">Yes</a>
         <a type="button" class="btn  btn-danger waves-effect" data-dismiss="modal">No</a>
       </div>
     </div>
     <!--/.Content-->
   </div>
 </div>
 <!--Modal: modalConfirmDelete-->
  <div class='container'>
  <%if (products&&products.length>0) { %>
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset3">
        <ul class="list-group">
          <%for (let product of products) { %>  
          <li class="list-group-item d-flex justify-content-start align-items-center">
              <strong class='px-2'><%=product.item.name%></strong>
              <span class='badge badge-success'><%=product.item.price%></span>
              <input type="hidden" class='product-id' value='<%=product.item._id%>'/>
              <a class='btn btn-info  ml-auto mr-2 update-add-cart' href="" >+</a>
              <h6 class='badge badge-success p-2 mr-2'><%=product.quantity%></h6>
              <a class='btn btn-info mr-2 update-reduce-cart' href="">-</a>
              <a class='btn btn-info update-remove-cart' href="" data-toggle="modal" data-target="#modalConfirmDelete">x</a>             
          </li>
          <% } %>
        </ul>
      </div>
      
    
    </div>
    
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset3">
        <strong>Total: <%=totalPrice %></strong>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset3">
        <a class='btn btn-success' id='checkout-link' href='/checkout'>Checkout</a>
      </div>
    </div>
    <% } else { %> 
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset3">
        <h2>No items in cart</h2>
      </div>
    </div>
    <% } %>
  </div>
</main>

<footer>
  <% include ../partials/footer %>
</footer>
<% include ../partials/scripts %>
<script>

let user = '<%-JSON.stringify(user)%>';
  // check out
  $('#checkout-link').click((event)=> {
    if (!user) {
      event.preventDefault();
      toastr.warning("You must log in before checkout", "Warning")
    }
  })
</script>
<script src='/javascripts/cart/updateCart.js'></script>
</body>
</html>
