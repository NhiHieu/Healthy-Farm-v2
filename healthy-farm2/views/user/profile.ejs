<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>
<body>

<header>
  <% include ../partials/header %>
</header>
<main class="main container">
  <h1>Profile</h1>
  <p><%=user.username%></p>  
  <p><%=user.firstName%></p>
  <p><%=user.lastName%></p>
  <p><%=user.email%></p>

  <h1>All orders</h1>
  <% orders.forEach(order=>{ %>

  <div class="card mb-2">
    <div class="card-header">
      <%= order.name%>
    </div>
    <ul class="list-group">
      <% order.items.forEach(ele=>{ %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= ele.item.name %> | <%= ele.quantity %>
          <span class="badge badge-primary badge-pill"><%= ele.price %></span>
        </li>
      <% }) %>
    </ul>
    <div class='card-footer'><%= order.cart.totalPrice %></div>
  </div>
  <% }) %>

</main>

<footer>
  <% include ../partials/footer %>
</footer>
<% include ../partials/scripts %>


</body>
</html>